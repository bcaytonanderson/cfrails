<div class="container col-xs-12 col-sm-6 col-sm-offset-3 text-center">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email, class: 'sr-only' %><br />
      <%= f.email_field :email, autofocus: true, class: 'deviseinput input-lg', placeholder: 'Email Address' %>
    </div>

    <div class="field">
      <%= f.label :password, class: 'sr-only', placeholder: 'Password' %>
      <%= f.password_field :password, autocomplete: "off", class: 'deviseinput input-lg', placeholder: 'Password (min. 6 chars)' %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="rememberfield">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", class: 'btn-lg btn-primary' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
